<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <a href="/items/add" class="btn btn-success pull-right">Add Post</a>
    <hr />
    {{#unless items}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{else}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Category</th>
              <th>Price</th>
              <th>Published</th>
              <th></th> <!-- New column for the "remove" link -->
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr>
                <td><a>{{this.id}}</a></td>
                <td>{{this.title}}</td>
                <td>{{this.postDate}}</td>
            <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                <td>{{this.price}}</td>
                <td>{{this.published}}</td>
                <td>
                  <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/unless}}
  </div>
</div>
