<div class="row">
  <section class="main col-md-9">
    {{#if data.post}}
    <div>
      <div class="row">
        <div class="col-4">
          <h2>{{data.post.title}}</h2>
          <img
            src="{{data.post.featureImage}}"
            alt="feature Image"
            style="width:100%"
          />
        </div>

        <div class="col-8"><br />
          <br />
          <div class="row">
            <div class="col-12">
              {{{safeHTML data.post.body}}}
              <br /><br />
              <strong>Price:</strong>
              $ {{data.post.price}}<br />
              <strong>Category:</strong>
              {{data.post.category}}<br />
              <strong>Last Updated:</strong>
              {{data.post.postDate}}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{else}}
    <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
    </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    <h4>Items</h4>

    <ul class="list-group">
      {{#if data.items}}
        {{#each data.items}}
<a href="/shop/{{this.id}}?category={{../data.post.Category.id}}" class="list-group-item">{{this.title}}</a>
        {{/each}}
      {{/if}}
    </ul>

    <h4>Categories</h4>

    <ul class="list-group">
      {{#if data.categories}}
        {{#each data.categories}}
          <a href="/shop?category={{this.id}}" class="list-group-item">{{this.category}}</a>
        {{/each}}
      {{/if}}
    </ul>
  </aside>
</div>
